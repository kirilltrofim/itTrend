@model IEnumerable<itTrend.Models.Educator>

@{
    ViewData["Title"] = "Преподаватель";
}

<h1>Преподаватель</h1>

<p>
    <a asp-action="Create">Добавить преподавателя</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                Фамилия
            </th>
            <th>
                Имя
            </th>
            <th>
                Отчество
            </th>
            <th>
                Фото
            </th>
            <th>
                Номер телефона
            </th>
            <th>
                Предмет
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronomic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GroupID">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.GroupID">Подробно</a> |
                <a asp-action="Delete" asp-route-id="@item.GroupID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
